<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:baselineAligned="false"
    android:gravity="center_vertical"
    android:orientation="vertical"
    android:padding="8dp" >

    <com.nhaowan.mobile.base.cards.header.UserHeaderCardView
        android:id="@+id/new_item_poster_view"
        style="@style/card.header_outer_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/common_list_item_text1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="title"
            android:textColor="#58585B"
            android:textSize="@dimen/common_listitem_title_21"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/common_list_item_category_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:background="@drawable/abc_ab_transparent_dark_holo"
            android:gravity="bottom"
            android:text="推荐"
            android:textColor="#58585B"
            android:textSize="12sp" />
    </LinearLayout>

    <TextView
        android:id="@+id/common_list_item_text2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="description"
        android:textColor="#58585B"
        android:textSize="15sp" />

    <com.haha.frame.widget.AutoImageView
        android:id="@+id/common_list_item_image"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignWithParentIfMissing="true"
        android:layout_marginBottom="2dp"
        android:layout_marginTop="5dp"
        android:contentDescription="@string/app_name"
        android:minHeight="300dp"
        android:scaleType="centerCrop" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp" >

        <TextView
            android:id="@+id/new_item_zan_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_btn_selector"
            android:text="+99" />

        <ImageView
            android:id="@+id/new_item_share"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@+id/new_item_zan_count"
            android:background="@drawable/bg_btn_selector"
            android:src="@drawable/share_transfer_selector" />

        <TextView
            android:id="@+id/new_item_comment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:background="@drawable/bg_btn_selector"
            android:drawableLeft="@drawable/ic_comment_selector"
            android:text="89" />
        <!--
        <TextView
            android:id="@+id/common_list_item_text3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:gravity="right"
            android:singleLine="true"
            android:text="time"
            android:textColor="#58585B"
            android:textSize="13sp" />

        <TextView
            android:id="@+id/common_list_item_subtitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:textColor="#565656"
            android:textSize="12sp"
            android:visibility="gone" />
        -->
    </RelativeLayout>

</LinearLayout>